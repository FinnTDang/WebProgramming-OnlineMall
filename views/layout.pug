doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel='stylesheet' href='stylesheets/style.css')

  body
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
    p.promo-banner Summer Sale For All Swim Suits And Free Express Delivery – OFF 50%! ShopNow
    header.header-nav
      if store 
        h1 #{store.name}
      else 
        h1 Mall Logo
      nav.navbar.navbar-expand-lg
        ul.navbar-nav
          li.nav-item
            a.link(href='/' class=(title === 'Home' ? 'active' : '')) Home
          li.nav-item
            a.link(href='/browse') Browse
          li.nav-item
            a.link(href='/about') About 
          li.nav-item
            a.link(href='/contact') Contact 
          li.nav-item
            a.link(href='/faq') FAQs
          li.nav-item
            a.link(href='/fees') Fees 
          if !user
            li.nav-item
              a.link(href='/signin') Sign in
            li.nav-item
              a.link(href='/signup') Sign up
          else 
            li.nav-item
              a.link(href= '/users/' + user._id) #{user.name}
            li.nav-item
              a.link(href='/signout') Sign out
            
    main    
      block content

    footer.footer
      div.footer-columns
        div.footer-logo
          if store 
            h1 #{store.name}
          else 
            h1 Mall Logo
        div.footer-column
          h5.footer-header Support
          p 111 Bijoy Sarani, Dhaka, DH 1515, Bangladesh.
          p exclusive@gmail.com
          p tel:+88015-88888-9999
        div.footer-column
          h5.footer-header Account
          a.link(href='/myaccount') My Account
          a.link(href='/wishlist') Wishlist
          a.link(href='/cart') Cart
        div.footer-column
          h5.footer-header Quick Link
          a.link(href='/copyright') Copyright
          a.link(href='/terms') Terms of Service 
          a.link(href='/privacy') Privacy Policy
      hr.divider
      .copyright| © Copyright 2024. All rights reserved.  
